   Content Directory Settings
   ========================================================================== */
define('WP_HOME',    'http://' . $_SERVER['SERVER_NAME']);
define('WP_SITEURL', WP_HOME . '/system');

define('WP_CONTENT_URL', '/<%= @content_dir %>');
